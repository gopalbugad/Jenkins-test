{
  "variables": {
    "source_ami": "{{user `source_ami_id`}}",
    "instance_type": "t2.micro",
    "region": "us-east-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "ami_name": "web-app-updated-{{timestamp}}",
      "instance_type": "{{user `instance_type`}}",
      "source_ami": "{{user `source_ami`}}",
      "ssh_username": "ec2-user",
      "region": "{{user `region`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo docker build -t my-web-app /var/www/html",
        "sudo docker run -d -p 80:80 my-web-app"
      ]
    }
  ]
}
